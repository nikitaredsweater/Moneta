# Application Configuration
APP_NAME=New Microservice
APP_VERSION=1.0.0
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000


# Logging
LOG_LEVEL=INFO

# Database (if needed)
DATABASE_URL=postgresql://user:password@db:5432/dbname

# Message Queue (if needed)
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# Inter-Service Authentication
# Secret key for authenticating requests from the on_chain service
# Generate a strong random key: python -c "import secrets; print(secrets.token_hex(32))"
ON_CHAIN_SERVICE_SECRET=your-secret-key-here-change-in-production
